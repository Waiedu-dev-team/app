{
  "name": "waiedu-web",
  "version": "1.0.0",
  "description": "Ứng dụng web chuyên nghiệp với Tailwind CSS",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:tunnel": "concurrently \"yarn dev\" \"yarn tunnel\"",
    "tunnel": "cloudflared tunnel --config C:\\Users\\fujitsu\\.cloudflared\\config.yml run",
    "build": "vite build",
    "preview": "vite preview",
    "preview:tunnel": "concurrently \"yarn preview\" \"yarn tunnel\"",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "format": "prettier --write .",
    "clean": "rimraf dist"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
